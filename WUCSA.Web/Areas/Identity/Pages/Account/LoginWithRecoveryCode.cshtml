@page
@model LoginWithRecoveryCodeModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Recovery code verification"];
}

<section class="log-in-us section mb-30">
    <div class="container">
        <div class="col-10 mx-auto mt-50">
            <div class="contact-head wow fadeInUp" data-wow-delay=".4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInUp;">
                <div class="row">
                    <div class="gixi gixi-md" data-gixiseed="such as username @DateTime.Now.Ticks.ToString()"></div>
                    <div class="col-lg-6 col-12">
                        <div class="form-main">
                            <div class="row">
                                <form method="post">
                                    <div class="heading">
                                        <h3>ViewData["Title"]</h3>
                                        <p>
                                            @Localizer["You have requested to log in with a recovery code. This login will not be remembered until you provide an authenticator app code at log in or disable 2FA and log in again."]"
                                        </p>
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.RecoveryCode" class="label"></label>
                                        <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-8 button">
                                        <button class="btn" type="submit">
                                            @Localizer["Log in"]
                                        </button>
                                    </div>
                                    <p class="text-center create-new-account">@Localizer["Already have an account?"] <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Log in"]</a></p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
