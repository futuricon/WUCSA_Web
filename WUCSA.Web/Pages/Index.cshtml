@section Scripts {
    <script src="~/lib/tinyslider/tiny-slider.js"></script>
    <script>
        $(document).ready(function () {
            resizer();
        });
        window.onresize = function () {
            resizer();
        };

        function resizer() {
            var cssWidth = $('.testimonial-img').css("width");
            var cssHeight = parseInt(cssWidth) * 4 / 3;
            $('.resize-img').css("height", cssHeight);
        }

        //====== Clients Logo Slider
        tns({
            container: '.client-logo-carousel',
            slideBy: 'page',
            autoplay: true,
            autoplayButtonOutput: false,
            mouseDrag: true,
            gutter: 15,
            nav: false,
            controls: false,
            responsive: {
                0: {
                    items: 1,
                },
                540: {
                    items: 2,
                },
                768: {
                    items: 3,
                },
                992: {
                    items: 4,
                },
                1170: {
                    items: 6,
                }
            }
        });

        //========= testimonial
        tns({
            container: '.testimonial-slider',
            items: 1,
            slideBy: 'page',
            autoplay: false,
            mouseDrag: true,
            gutter: 0,
            nav: false,
            controls: true,
            controlsText: ['<i class="lni lni-arrow-left"></i>', '<i class="lni lni-arrow-right"></i>'],
            responsive: {
                0: {
                    items: 1,
                },
                540: {
                    items: 1,
                },
                768: {
                    items: 2,
                },
                992: {
                    items: 3,
                },
                1170: {
                    items: 3,
                }
            }
        });
        function onSubmit(token) {
            document.getElementById("reg-form").submit();
        }

        document.getElementById("header_home_id").className = "active";

    </script>
}
