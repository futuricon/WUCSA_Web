    <img class="patern2 wow fadeInLeft" data-wow-delay=".5s" src="assets/images/gal/patern1.png" alt="#" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInLeft;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title wow fadeInLeft" data-wow-delay=".3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInLeft;">
                    <a href="#" class="a-alt">All Members</a>
                    @if (!Model.Staffs.Any())
                    {
                        <h2>@Localizer["There are no any Staff yet"]</h2>
                    }
                    else
                    {
                        <h2>@Localizer["Our Staff"]</h2>
                    }
                </div>
                <div class="testimonial-inner-head wow fadeInLeft" data-wow-delay=".3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInLeft;">
                    <div class=" testimonial-inner">
                        <div class="tns-outer" id="tns2-ow">
                            <div class="tns-controls" aria-label="Carousel Navigation" tabindex="0"><button type="button" data-controls="prev" tabindex="-1" aria-controls="tns2"><i class="lni lni-arrow-left"></i></button><button type="button" data-controls="next" tabindex="-1" aria-controls="tns2"><i class="lni lni-arrow-right"></i></button></div>
                            <div class="tns-liveregion tns-visually-hidden" aria-live="polite" aria-atomic="true">slide <span class="current">3</span> of 4</div>
                            <div id="tns2-mw" class="tns-ovh">
                                <div class="tns-inner" id="tns2-iw">
                                    <div class="testimonial-slider  tns-slider tns-carousel tns-subpixel tns-calc tns-horizontal" id="tns2" style="transform: translate3d(-33.3333%, 0px, 0px);">

                                        @if (Model.Staffs.Any())
                                        {
                                            foreach (var staff in Model.Staffs)
                                            {
                                                <div class="single-testimonial tns-item px-2">
                                                    <div class="testimonial-img mx-auto">
                                                        <img class="resize-img" src="@staff.ProfilePhotoPath" alt="@staff.FirstName">
                                                    </div>
                                                    <a href="#">
                                                        <h4 class="name">
                                                            @staff.FirstName @staff.LastName
                                                            <span>
                                                                @switch (Model.RCName)
                                                                {
                                                                    case "ru":
                                                                        @staff.PositionRu
                                                                        break;
                                                                    case "uz":
                                                                        @staff.PositionUz
                                                                        break;
                                                                    default:
                                                                        @staff.Position
                                                                        break;
                                                                }
                                                            </span>
                                                        </h4>
                                                    </a>
                                                </div>
                                            }
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ End Staff Area -->
<!-- Start Event Area-->
<section class="latest-event section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <a href="#" class="wow fadeInDown" data-wow-delay=".2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInDown;">@Localizer["All Events"]</a>
                    <h2 class="wow fadeInUp" data-wow-delay=".4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInUp;">@Localizer["Latest Events"]</h2>
                </div>
            </div>
        </div>
        <div class="single-head">
            <div class="row">

                @if (!Model.Events.Any())
                {
                    <h4>@Localizer["There are no any Events yet"]</h4>
                }
                else
                {
                    foreach (var myEvent in Model.Events)
                    {
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-event wow fadeInUp" data-wow-delay=".3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
                                <div class="row">
                                    <div class="event-image col-lg-5 col-12">
                                        <img src="@myEvent.CoverPhotoPath" alt="@myEvent.Title cover photo">
                                    </div>
                                    <div class="event-content col-lg-7 col-12">
                                        <h4>
                                            <a asp-page="/Event/Index" asp-route-slug="@myEvent.Slug">
                                                @switch (Model.RCName)
                                                {
                                                    case "ru":
                                                        @myEvent.TitleRu
                                                        break;
                                                    case "uz":
                                                        @myEvent.TitleUz
                                                        break;
                                                    default:
                                                        @myEvent.Title
                                                        break;
                                                }
                                            </a>
                                        </h4>
                                        <p>
                                            @switch (Model.RCName)
                                            {
                                                case "ru":
                                                    @Core.Entities.EventModel.Event.GetShortContent(myEvent.DescriptionRu, 200)
                                                    break;
                                                case "uz":
                                                    @Core.Entities.EventModel.Event.GetShortContent(myEvent.DescriptionUz, 200)
                                                    break;
                                                default:
                                                    @Core.Entities.EventModel.Event.GetShortContent(myEvent.Description, 200)
                                                    break;
                                            }
                                        </p>
                                        <ul>
                                            <li><i class="lni lni-calendar"></i> @myEvent.EventDate.ToString(DateTimeFormatInfo.CurrentInfo.ShortDatePattern)</li>
                                            <li><i class="lni lni-map-marker"></i> @myEvent.EventLocation</li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="event-button">
                                    <ul>
                                        <li><a asp-page="/Event/Index" asp-route-slug="@myEvent.Slug">@Localizer["Read More"]</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</section>
<!-- /End Event Area-->
<!-- Start News & Blog Area-->
<div class="latest-news-area section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <a href="#" class="wow fadeInDown" data-wow-delay=".2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeInDown;">@Localizer["All News"]</a>
                    <h2 class="wow fadeInUp" data-wow-delay=".4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInUp;">@Localizer["Latest News & Blog"]</h2>
                </div>
            </div>
        </div>
        <div class="row">

            @if (!Model.Blogs.Any())
            {
                <h4>@Localizer["There are no any Posts yet"]</h4>
            }
            else
            {
                foreach (var blog in Model.Blogs)
                {
                    <div class="col-lg-4 col-md-6 col-12">

                        <div class="single-news wow fadeInUp" data-wow-delay=".3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
                            <div class="image">
                                @if (!string.IsNullOrEmpty(blog.CoverPhotoPath))
                                {
                                    <img class="thumb" src="@blog.CoverPhotoPath" alt="@blog.Title cover photo" />
                                }
                                else
                                {
                                    <img src="~/img/blog_image.png" alt="default cover photo" />
                                }
                            </div>
                            <div class="content-body">
                                <h4 class="title">
                                    <a asp-page="/Blog/Index" asp-route-slug="@blog.Slug">
                                        @switch (Model.RCName)
                                        {
                                            case "ru":
                                                @blog.TitleRu
                                                break;
                                            case "uz":
                                                @blog.TitleUz
                                                break;
                                            default:
                                                @blog.Title
                                                break;
                                        }
                                    </a>
                                </h4>
                                <div class="meta-details">
                                    <ul>
                                        <li><i class="lni lni-calendar"></i> @blog.PostedDate.ToString(DateTimeFormatInfo.CurrentInfo.ShortDatePattern)</li>
                                        <li><i class="lni lni-eye"></i> @blog.ViewCount</li>
                                        <li><i class="lni lni-comments"></i>@blog.Comments.Count</li>
                                    </ul>
                                </div>
                                <p>
                                    @switch (Model.RCName)
                                    {
                                        case "ru":
                                            @WUCSA.Core.Entities.BlogModel.Blog.GetShortContent(blog.ContentRu, 300)
                                            break;
                                        case "uz":
                                            @WUCSA.Core.Entities.BlogModel.Blog.GetShortContent(blog.ContentUz, 300)
                                            break;
                                        default:
                                            @WUCSA.Core.Entities.BlogModel.Blog.GetShortContent(blog.Content, 300)
                                            break;
                                    }
                                </p>
                                <div class="button">
                                    <a asp-page="/Blog/Index" asp-route-slug="@blog.Slug" class="btn">@Localizer["Read More"]</a>
                                </div>
                            </div>
                        </div>

                    </div>
                }
            }

        </div>
    </div>
</div>
<!-- /End News & Blog Area-->
