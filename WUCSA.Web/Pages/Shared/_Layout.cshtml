<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @await RenderSectionAsync("Head", required: false).ConfigureAwait(false)
    <title>@ViewData["Title"] - WUCSA</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />

    <!-- Web Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    <!-- ========================= CSS here ========================= -->
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </environment>
    <environment exclude="Development">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x"
              crossorigin="anonymous">
    </environment>
    <link href="https://cdn.lineicons.com/2.0/LineIcons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/main.css" />

    @await RenderSectionAsync("CSS", required: false).ConfigureAwait(false)

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-B0NGP337NX"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-B0NGP337NX');
    </script>

</head>
<body>

    <div id="loading-area"></div>

    <!-- Start Header Area -->
    <header class="header">
        <div class="navbar-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand logo" href="index.html">
                                <img class="logo1" src="~/images/logo/logo.svg" alt="Logo" />
                            </a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ml-auto">
                                    <li class="nav-item"><a is-active-page id="header_home_id" asp-area="" asp-page="/Index">Home</a></li>
                                    <li class="nav-item">
                                        <a is-active-page id="header_about_id" asp-page="/About">About</a>
                                        <ul class="sub-menu">
                                            <li><a is-active-page id="header_history_id" asp-page="/History">History</a></li>
                                            <li><a is-active-page id="header_members_id" asp-page="/Staff/List">Staff & Members</a></li>
                                            <li><a is-active-page id="header_sportType_id" asp-page="/SportType/List">Types of Sport</a></li>
                                        </ul>
                                    </li>
                                    <li class="nav-item"><a is-active-page id="header_events_id" asp-page="/Event/List" asp-route-location="World">Events</a></li>
                                    <li class="nav-item"><a is-active-page id="header_ranking_id" asp-page="/Rank/List" asp-route-loc="World" asp-route-gender="Man">Ranking</a></li>
                                    <li class="nav-item"><a is-active-page id="header_gallery_id" asp-page="/Gallery/Index">Gallery </a></li>
                                    <li class="nav-item"><a is-active-page id="header_blog_id" asp-page="/Blog/List">Blog</a></li>
                                    <li class="nav-item"><a is-active-page id="header_contacts_id" asp-page="/Contact">Contact Us</a></li>
                                    <vc:culture-switcher />
                                </ul>
                            </div>
                            <partial name="_LoginPartial" />
                        </nav>
                        <!-- navbar -->
                    </div>
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- navbar area -->
    </header>
    <!-- End Header Area -->

    <main role="main">
        @RenderBody()
    </main>

    <!-- Start Footer Area -->
    <footer class="footer">
        <!-- Start Middle Top -->
        <div class="footer-middle">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-5 col-12">
                        <!-- Single Widget -->
                        <div class="f-about single-footer">
                            <div class="logo">
                                <a asp-area="" asp-page="/Index"><img src="~/images/logo/logo.svg" alt="Logo"></a>
                            </div>
                            <p>World Usmanov's<br>Combat Systems<br>Association</p>
                            <ul class="contact-address">
                                <li><span>Address:</span> 555 Wall Street, USA, NY</li>
                                <li><span>Email:</span> example@apus.com</li>
                                <li><span>Call:</span> 555-555-1234</li>
                            </ul>
                            <div class="footer-social">
                                <ul>
                                    <li><a href="https://www.facebook.com/sport.wucsa"><i class="lni lni-facebook-original"></i></a></li>
                                    <li><a href="https://www.instagram.com/sport.wucsa/"><i class="lni lni-instagram-original"></i></a></li>
                                    <li><a href="https://www.youtube.com/channel/UCYzKUR7sbhYYFXAV5bA-Juw"><i class="lni lni-youtube"></i></a></li>
                                    <li><a href="https://t.me/wucsa"><i class="lni lni-telegram-original"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- End Single Widget -->
                    </div>
                    <div class="col-lg-8 col-md-7 col-12">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <!-- Single Widget -->
                                <div class="single-footer f-link">
                                    <h3>For Guests</h3>
                                    <ul>
                                        <li><a asp-page="/About/Index">About us</a></li>
                                        <li><a asp-page="/History/Index">History</a></li>
                                        <li><a asp-page="/SportType/List">Types of Sport &amp; Rules</a></li>
                                        <li><a asp-page="/Blog/List">News & Blog</a></li>
                                        <li><a asp-page="/Gallery/Index">Gallery</a></li>
                                    </ul>
                                </div>
                                <!-- End Single Widget -->
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <!-- Single Widget -->
                                <div class="single-footer f-link">
                                    <h3>For Members</h3>
                                    <ul>
                                        <li><a asp-page="/Event/List" asp-route-location="World">Events</a></li>
                                        <li><a asp-page="/Rank/List">Ranking</a></li>
                                        <li><a asp-page="/Staff/List">Staff</a></li>
                                        <li><a asp-page="/Staff/List">Members</a></li>
                                    </ul>
                                </div>
                                <!-- End Single Widget -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ End Footer Middle -->
        <!-- Start Footer Bottom -->
        <div class="footer-bottom">
            <div class="container">
                <div class="inner">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="left">
                                <p>© @DateTime.Now.Year - WUCSA.COM / By<a class="glitch-logo" href="https://t.me/Futuricon" data-text="FUTURICON">FUTURICON</a></p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="right">
                                <ul>
                                    @*<li><a asp-page="/Privacy">RSS</a></li>*@
                                    <li><a asp-page="/Privacy">Privacy</a></li>
                                    <li><a asp-page="/Contact">Contact</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Footer Middle -->
    </footer>
    <!--/ End Footer Area -->
    <!-- ========================= scroll-top ========================= -->
    <a href="#" class="scroll-top btn-hover">
        <i class="lni lni-chevron-up"></i>
    </a>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
                integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"
                integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
                integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
                crossorigin="anonymous">
        </script>
    </environment>


    <script src="~/js/wow.min.js"></script>
    <script src="~/js/main.js"></script>
    <script>
        $(document).ready(function () {
            if ($("#header_history_id").hasClass("active") || $("#header_members_id").hasClass("active") || $("#header_sportType_id").hasClass("active")) {
                $("#header_about_id").addClass("active");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false).ConfigureAwait(false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
