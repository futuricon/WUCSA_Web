@page
@model WUCSA.Web.Pages.RankParticipant.DeleteModel

@{ ViewData["Title"] = "Delete";
    Layout = "_Layout"; }

@section CSS {
    <link rel="stylesheet" href="~/css/rank_style.css" />
}

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Delete Ranking List</h1>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-page="/Index">Home</a></li>
                    <li><a asp-page="/Rank/Index/@Model.RankParticipant.Rank.Slug/Man">Ranking List</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="delete-rank section">
    <div class="container">
        <div class="alerts-inner">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    <div class="rank-items">
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-12">
                                    <h2>Are you sure you want to delete this Ranking List?</h2>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.RankParticipant.Weight)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.RankParticipant.Weight)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.RankParticipant.Gender)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.RankParticipant.Gender)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.RankParticipant.Participants.Count)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.RankParticipant.Participants.Count)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.RankParticipant.Rank)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.RankParticipant.Rank)</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="RankParticipant.Id" />
                        <div class="button form-group mt-4">
                            <input type="submit" value="Delete" class="btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


