@page
@using WUCSA.Core.Entities.RankModel
@model WUCSA.Web.Pages.Rank.ListModel
@namespace WUCSA.Models

@{ ViewData["Title"] = "WUCSA Ranking";
    Layout = "_Layout"; }

@section Head {
    <meta name="author" content="WUCSA" />
    <meta name="description" content="WUCSA official Ranking" />
    <meta name="keywords" content="WUCSA, Ranking, Rank" />
}

@section CSS {
    <link rel="stylesheet" href="~/css/blog_style.css" />
    <link rel="stylesheet" href="~/css/main.css" />
}

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Ranking List</h1>
                    <p>
                        Business plan draws on a wide range of knowledge from different business<br> disciplines.
                        Business draws on a wide range of different business .
                    </p>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a href="#">Rank</a></li>
                    <li>
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            @*<a asp-page="/Blog/Create">Add new Ranking</a>*@
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="section latest-news-area blog-list">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row">

                    <div class="col-lg-4 col-md-6 col-12 mx-auto">
                        <div class="single-news wow fadeInUp" data-wow-delay=".3s"
                             style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
                            <div class="image">
                                <img src="~/images/map_wrld.png" alt="default cover photo" />
                            </div>
                            <div class="content-body">
                                <div class="meta-details">
                                    <ul>
                                        <li><a class="a-none"><i class="lni lni-calendar"></i> @Model.WorldRanksCount</a></li>
                                    </ul>
                                </div>
                                <div class="mt-20">
                                    <input type="radio" name="rankLoc" class="btn-check" id="btn-check-w" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btn-check-w">World Ranking</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-12 mx-auto">

                        <div class="single-news wow fadeInUp" data-wow-delay=".3s"
                             style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
                            <div class="image">
                                <img src="~/images/map_uzb.png" alt="default cover photo" />
                            </div>
                            <div class="content-body">
                                <div class="meta-details">
                                    <ul>
                                        <li><a class="a-none"><i class="lni lni-calendar"></i> @Model.NationalRanksCount</a></li>
                                    </ul>
                                </div>
                                <div class="mt-20">
                                    <input type="radio" name="rankLoc" class="btn-check" id="btn-check-n" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btn-check-n">National Ranking</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
           
        </div>
    </div>
</section>

<section class="xs-category section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <span class="wow fadeInDown" data-wow-delay=".2s">Sport Types</span>
                    <h2 class="wow fadeInUp" data-wow-delay=".4s">Choose Sport Type</h2>
                    @*<p class="wow fadeInUp" data-wow-delay=".6s">
                        There are many variations of passages of Lorem
                        Ipsum available, but the majority have suffered alteration in some form.
                    </p>*@
                </div>
            </div>
        </div>
        <div class="cat-head">
            <div class="row">
                <div class="col-lg-3 col-md-6 col-12">
                    <a href="job-details.html" class="single-cat wow fadeInUp" data-wow-delay=".2s">
                        <div class="icon">
                            <i class="lni lni-cog"></i>
                        </div>
                        <h3>Technical<br> Support</h3>
                    </a>
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <a href="job-details.html" class="single-cat wow fadeInUp" data-wow-delay=".4s">
                        <div class="icon">
                            <i class="lni lni-layers"></i>
                        </div>
                        <h3>Business<br> Development</h3>
                    </a>
                </div>
                @foreach (var sportTypes in Model.SportTypes)
                {
                    <div class="col-lg-3 col-md-6 col-12">
                        <a href="job-details.html" class="single-cat wow fadeInUp" data-wow-delay=".6s">
                            <div class="icon">
                                <i class="lni lni-home"></i>
                            </div>
                            <h3>Some kind of sport</h3>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>