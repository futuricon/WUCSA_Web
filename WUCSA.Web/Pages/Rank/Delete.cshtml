@page
@model WUCSA.Web.Pages.Rank.DeleteModel
@inject IViewLocalizer Localizer
@{ ViewData["Title"] = Localizer["Delete"];
    Layout = "_Layout"; }

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@Localizer["Delete Rank"]</h1>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-page="/Index">@Localizer["Home"]</a></li>
                    <li><a asp-page="/Rank/List">@Localizer["Rank"]</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="delete-rank section">
    <div class="container">
        <div class="alerts-inner">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    @if (ViewData["ErrorMsg"] != null)
                    {
                        <div class="rank-items">
                            <div class="manage-content">
                                <div class="row align-items-center justify-content-center">
                                    <div class="col-12">
                                        <h2>@Localizer[$"{ViewData["ErrorMsg"]}"]</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                <div class="rank-items">
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-12">

                                <h2>@Localizer["Are you sure you want to delete this Rank?"]</h2>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.Title)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.DisplayFor(model => model.Rank.Title))</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.TitleRu)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.DisplayFor(model => model.Rank.TitleRu)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.TitleUz)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.DisplayFor(model => model.Rank.TitleUz)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.Description)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.Raw(Model.Rank.Description)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.DescriptionRu)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.Raw(Model.Rank.DescriptionRu)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.DescriptionUz)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.Raw(Model.Rank.DescriptionUz)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.Slug)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>
                                    https://wucsa.com/blog/
                                    @Html.DisplayFor(model => model.Rank.Slug)
                                </h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.RankSportTypes.Count)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.DisplayFor(model => model.Rank.RankSportTypes.Count)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.Location)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.DisplayFor(model => model.Rank.Location)</h4>
                            </div>
                        </div>
                    </div>
                    <div class="manage-content">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-lg-3 col-md-3 col-12">
                                <h3>@Html.DisplayNameFor(model => model.Rank.RankDate)</h3>
                            </div>
                            <div class="col-lg-9 col-md-9 col-12">
                                <h4>@Html.DisplayFor(model => model.Rank.RankDate)</h4>
                            </div>
                        </div>
                    </div>
                </div>
                        <form method="post">
                            <input type="hidden" asp-for="Rank.Id" />
                            <div class="button form-group mt-4">
                                <input type="submit" value="Delete" class="btn" />
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
