@page
@model WUCSA.Web.Pages.Rank.DeleteModel
@inject IViewLocalizer Localizer
@{ ViewData["Title"] = Localizer["Delete"];
    Layout = "_Layout"; }

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@Localizer["Delete Rank"]</h1>
                    <p>
                        Business plan draws on a wide range of knowledge from different business<br> disciplines.
                        Business draws on a wide range of different business .
                    </p>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-page="/Index">@Localizer["Home"]</a></li>
                    <li><a asp-page="/Rank/List">@Localizer["Rank"]</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<section class="section blog-single">
    <div class="container">

        @if (ViewData["ErrorMsg"] != null)
        {
            <h3>@Localizer[$"{ViewData["ErrorMsg"]}"]</h3>
        }
            <h3>@Localizer["Are you sure you want to delete this Type of Sort?"]</h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rank.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rank.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rank.TitleRu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rank.TitleRu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rank.TitleUz)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rank.TitleUz)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rank.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Rank.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rank.DescriptionRu)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Rank.DescriptionRu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rank.DescriptionUz)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Rank.DescriptionUz)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rank.Slug)
                </dt>
                <dd class="col-sm-10">
                    <span>https://wucsa.com/SportType/</span>
                    @Html.DisplayFor(model => model.Rank.Slug)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Rank.Id" />
                <div class="button form-group mt-4">
                    <input type="submit" value="@Localizer["Delete"]" class="btn" />
                </div>
            </form>

    </div>
</section>