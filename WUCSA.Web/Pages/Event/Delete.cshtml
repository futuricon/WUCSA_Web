                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Event.EventDate)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Event.Author)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Event.Author.UserName)</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="Event.Id" />
                        <div class="button form-group mt-4">
                            <input type="submit" value="Delete" class="btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

