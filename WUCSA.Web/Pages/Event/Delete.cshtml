                                    <h4>@Html.Raw(Model.Event.DescriptionRu)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Event.DescriptionUz)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.Raw(Model.Event.DescriptionUz)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Event.Slug)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>
                                        https://wucsa.com/event/
