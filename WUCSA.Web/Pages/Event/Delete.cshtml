                    <div class="event-items">
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-12">
                                    <h2>Are you sure you want to delete this event?</h2>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Event.Title)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Event.Title)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Event.TitleRu)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Event.TitleRu)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
