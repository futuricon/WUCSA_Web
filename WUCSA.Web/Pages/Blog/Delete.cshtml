@page
@model WUCSA.Web.Pages.Blog.DeleteModel

@{ ViewData["Title"] = "Delete";
    Layout = "_Layout"; }

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Delete Article</h1>
                    <p>
                        Business plan draws on a wide range of knowledge from different business<br> disciplines.
                        Business draws on a wide range of different business .
                    </p>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-page="/Index">Home</a></li>
                    <li><a asp-page="/Blog/List">Blog</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<section class="section blog-single">
    <div class="container">
        <h3>Are you sure you want to delete this article?</h3>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.TitleRu)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.TitleRu)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.TitleUz)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.TitleUz)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Blog.Content)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.ContentRu)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Blog.ContentRu)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.ContentUz)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Blog.ContentUz)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.Slug)
            </dt>
            <dd class="col-sm-10">
                <span>https://wucsa.com/blog/</span>
                @Html.DisplayFor(model => model.Blog.Slug)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tags)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tags)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.PostedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.PostedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.Author.UserName)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Blog.Id" />
            <div class="button form-group mt-4">
                <input type="submit" value="Delete" class="btn" />
            </div>
        </form>

    </div>
</section>

