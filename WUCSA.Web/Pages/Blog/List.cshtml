@page
@using WUCSA.Core.Entities.BlogModel
@model WUCSA.Web.Pages.Blog.ListModel
@namespace WUCSA.Models

@{ ViewData["Title"] = "WUCSA Blog";
    Layout = "_Layout"; }

@section Head {
    <meta name="author" content="WUCSA" />
    <meta name="description" content="WUCSA official blog" />
    <meta name="keywords" content="WUCSA, blog" />
}

@section CSS {
    <link rel="stylesheet" href="~/css/blog_style.css" />
}

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Blog Grid Sidebar</h1>
                    <p>
                        Business plan draws on a wide range of knowledge from different business<br> disciplines.
                        Business draws on a wide range of different business .
                    </p>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="#">Blog</a></li>
                    <li>
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <a asp-page="/Blog/Create">Add new post</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="section latest-news-area blog-list">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-7 col-12">
                <div class="row">
                    @if (!Model.Blogs.Any())
                    { <h4>There no any posts yet</h4> }
                    else
                    {
                        foreach (var blog in Model.Blogs)
                        {
                             <div class="col-lg-6 col-12">

                                <div class="single-news wow fadeInUp" data-wow-delay=".3s"
                                     style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
                                    <div class="image">
                                        @if (!string.IsNullOrEmpty(blog.CoverPhotoPath))
                                        {
                                            <img class="thumb" src="@blog.CoverPhotoPath" alt="@blog.Title cover photo" />
                                        }
                                        else
                                        {
                                            <img src="~/img/blog_image.png" alt="default cover photo" />
                                        }
                                    </div>
                                    <div class="content-body">
                                        <h4 class="title">
                                            <a href="blog-single.html">
                                                The Internet Is A Job Seeker
                                                Most Crucial Success
                                            </a>
                                        </h4>
                                        <div class="meta-details">
                                            <ul>
                                                <li><a href="#"><i class="lni lni-tag"></i> Job skills</a></li>
                                                <li><a href="#"><i class="lni lni-calendar"></i> @blog.PostedDate.ToString(DateTimeFormatInfo.CurrentInfo.ShortDatePattern)</a></li>
                                                <li><a href="#"><i class="lni lni-eye"></i> @blog.ViewCount</a></li>
                                            </ul>
                                        </div>
                                        <p>
                                            @Blog.GetShortContent(blog.Content, 500)
                                        </p>
                                        <div class="button">
                                            <a asp-page="/Blog/Index" asp-route-slug="@blog.Slug" class="btn">Read More</a>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        }
                    }
                    
                </div>

                <div class="pagination center">
                    <ul class="pagination-list">
                        <pagination class="mx-auto" page-index="@Model.Blogs.PageIndex" total-pages="@Model.Blogs.TotalPages" base-url="/Blog/List" />
                    </ul>
                </div>

            </div>
            <aside class="col-lg-4 col-md-5 col-12">
                <div class="sidebar">

                    <div class="widget search-widget">
                        <h5 class="widget-title"><span>Search This Site</span></h5>
                        <form action="#">
                            <input type="text" placeholder="Search Here...">
                            <button type="submit"><i class="lni lni-search-alt"></i></button>
                        </form>
                    </div>

                    <div class="widget popular-feeds">
                        <h5 class="widget-title"><span>Popular Feeds</span></h5>
                        <div class="popular-feed-loop">
                            @foreach (var article in Model.PopularArticles)
                            {
                                <div class="single-popular-feed">
                                    <div class="feed-desc">
                                        <h6 class="post-title">
                                            <a asp-page="/Blog/Index" asp-route-slug="@article.Slug">
                                                @article.Title
                                            </a>
                                        </h6>
                                        <span class="time"><i class="lni lni-calendar"></i>@article.PostedDate.ToString(DateTimeFormatInfo.CurrentInfo.ShortDatePattern)</span>
                                    </div>
                                </div>
                            }
                            
                        </div>
                    </div>
                    
                    <div class="widget popular-tag-widget">
                        <h5 class="widget-title"><span>Popular Tags</span></h5>
                        <div class="tags">
                            @foreach (var tag in Model.PopularTags)
                            {
                                <a asp-page="/Blog/List" asp-route-tag="@tag.Trim()">@tag</a>
                            }                            
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>