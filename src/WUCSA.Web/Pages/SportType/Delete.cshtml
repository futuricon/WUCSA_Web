@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WUCSA.Web.Pages.SportType.DeleteModel
@inject IViewLocalizer Localizer
@{ 
    ViewData["Title"] = Localizer["Delete"];
    Layout = "_Layout"; 
}

@section CSS {
    <link rel="stylesheet" href="~/css/rank_style.css" />
}
<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">@Localizer["Delete Type of Sport"]</h1>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-page="/Index">@Localizer["Home"]</a></li>
                    <li><a asp-page="/SportType/List">@Localizer["Types of Sport"]</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="delete-rank section">
    <div class="container">
        <div class="alerts-inner">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">

                    @if (ViewData["ErrorMsg"] != null)
                    {
                        <h3>@Localizer[$"{ViewData["ErrorMsg"]}"]</h3>
                    }
                    else
                    {
                        <h3>@Localizer["Are you sure you want to delete this Type of Sort?"]</h3>
                        <dl class="row  mt-30">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SportType.Name)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SportType.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SportType.NameRu)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SportType.NameRu)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SportType.NameUz)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.SportType.NameUz)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SportType.Description)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.SportType.Description)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SportType.DescriptionRu)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.SportType.DescriptionRu)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SportType.DescriptionUz)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.Raw(Model.SportType.DescriptionUz)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.SportType.Slug)
                            </dt>
                            <dd class="col-sm-10">
                                <span>https://wucsa.com/SportType/</span>
                                @Html.DisplayFor(model => model.SportType.Slug)
                            </dd>
                        </dl>

                        <form method="post">
                            <input type="hidden" asp-for="SportType.Id" />
                            <div class="button form-group mt-4">
                                <input type="submit" value="@Localizer["Delete"]" class="btn" />
                            </div>
                        </form>

                    }

                </div>
            </div>
        </div>
    </div>
</div>
                


