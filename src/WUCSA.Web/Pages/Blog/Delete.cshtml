@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WUCSA.Web.Pages.Blog.DeleteModel

@{ 
    ViewData["Title"] = "Delete";
    Layout = "_Layout"; 
}

@section CSS {
    <link rel="stylesheet" href="~/css/blog_style.css" />
}

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Delete Article</h1>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-page="/Index">Home</a></li>
                    <li><a asp-page="/Blog/List">Blog</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="manage-blog section">
    <div class="container">
        <div class="alerts-inner">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    <div class="blog-items">
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-12">
                                    <h2>Are you sure you want to delete this article?</h2>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.Title)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Blog.Title)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.TitleRu)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Blog.TitleRu)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.TitleUz)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Blog.TitleUz)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.Content)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.Raw(Model.Blog.Content)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.ContentRu)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.Raw(Model.Blog.ContentRu)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.ContentUz)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.Raw(Model.Blog.ContentUz)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.Slug)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>
                                        https://wucsa.com/blog/
                                        @Html.DisplayFor(model => model.Blog.Slug)
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Tags)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Tags)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.PostedDate)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Blog.PostedDate)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Blog.Author)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Blog.Author.UserName)</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="Blog.Id" />
                        <div class="button form-group mt-4">
                            <input type="submit" value="Delete" class="btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

