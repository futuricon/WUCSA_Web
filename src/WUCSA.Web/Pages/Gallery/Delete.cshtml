@page
@model WUCSA.Web.Pages.Gallery.DeleteModel

@{ ViewData["Title"] = "Delete";
    Layout = "_Layout"; }

@section CSS {
    <link rel="stylesheet" href="~/css/gallery_style.css" />
}

<div class="breadcrumbs overlay">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Delete Media</h1>
                </div>
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-page="/Index">Home</a></li>
                    <li><a asp-page="/Gallery/Index">Gallery</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="manage-gallery section">
    <div class="container">
        <div class="alerts-inner">
            <div class="row">
                <div class="col-lg-8 col-12 mx-auto">
                    <div class="gallery-items">
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-12">
                                    <h2>Are you sure you want to delete this media?</h2>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Media.LikesCount.Count)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>Likes Amount</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Tags)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Tags)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Media.PostedDate)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Media.PostedDate)</h4>
                                </div>
                            </div>
                        </div>
                        <div class="manage-content">
                            <div class="row align-items-center justify-content-center">
                                <div class="col-lg-3 col-md-3 col-12">
                                    <h3>@Html.DisplayNameFor(model => model.Media.Author)</h3>
                                </div>
                                <div class="col-lg-9 col-md-9 col-12">
                                    <h4>@Html.DisplayFor(model => model.Media.Author.UserName)</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form method="post">
                        <input type="hidden" asp-for="Media.Id" />
                        <div class="button form-group mt-4">
                            <input type="submit" value="Delete" class="btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

