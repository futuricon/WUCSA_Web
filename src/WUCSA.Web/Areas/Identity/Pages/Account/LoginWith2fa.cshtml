@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginWith2faModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Two-factor authentication"];
}

<section class="log-in-us section mb-30">
    <div class="container">
        <div class="col-10 mx-auto mt-50">
            <div class="contact-head wow fadeInUp" data-wow-delay=".4s" style="visibility: visible; animation-delay: 0.4s; animation-name: fadeInUp;">
                <div class="row">
                    <div class="col-lg-6 col-12">
                        <div class="form-main">
                            <div class="row">
                                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                                    <input asp-for="RememberMe" type="hidden" />
                                    <div class="heading">
                                        <h3>@ViewData["Title"]</h3>
                                        <p>@Localizer["Your login is protected with an authenticator app. Enter your authenticator code below."]</p>
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.TwoFactorCode" class="label"></label>
                                        <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-group d-flex flex-wrap justify-content-between">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMachine">
                                            <label class="form-check-label" asp-for="Input.RememberMachine">@Html.DisplayNameFor(m => m.Input.RememberMachine)</label>
                                        </div>
                                        <a asp-page="./ForgotPassword" class="font-size-3 text-dodger line-height-reset">@Localizer["Forgot your password?"]</a>
                                    </div>
                                    <div class="form-group mb-8 button">
                                        <button type="submit" class="btn">
                                            @Localizer["Log in"]
                                        </button>
                                    </div>
                                    <p class="text-center create-new-account">@Localizer["Don't have access to your authenticator device? You can"] <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["log in with a recovery code"]</a>.</p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
